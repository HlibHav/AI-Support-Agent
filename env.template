# AI Support Agent - Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# Google Gemini API Configuration
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=models/gemini-1.5-flash

# Redmine Configuration (Optional)
REDMINE_URL=https://your-redmine-instance.com
REDMINE_API_KEY=your_redmine_api_key_here
REDMINE_USERNAME=your_username
REDMINE_PASSWORD=your_password

# SendPulse Configuration (Optional)
SENDPULSE_API_ID=your_sendpulse_api_id
SENDPULSE_API_SECRET=your_sendpulse_api_secret
SENDPULSE_LIVE_CHAT_ID=your_live_chat_id

# Database Configuration (Optional)
DATABASE_URL=sqlite:///knowledge.db
# For PostgreSQL: postgresql://user:password@host:port/database
# For MySQL: mysql://user:password@host:port/database

# Application Configuration
APP_PORT=8502
API_PORT=8000
DEBUG_MODE=false

# Knowledge Base Configuration
KNOWLEDGE_BUILD_TYPE=text
MAX_DOCUMENTS=100
CHUNK_SIZE=1000

# Security Configuration
SECRET_KEY=your_secret_key_for_sessions
ALLOWED_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# CSV Data File Configuration
# Replace with your actual ticket data file
CSV_DATA_FILE=issues (10).csv 